<Window x:Class="Big3.Hitbase.Application.WindowAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Über Hitbase" Height="394" Width="607" WindowStartupLocation="CenterOwner" TextOptions.TextFormattingMode="Display" ResizeMode="NoResize">
    <Grid Margin="10">
        <TextBlock HorizontalAlignment="Left" Margin="0,0,0,0" FontSize="48"
                   Text="Hitbase 2012" VerticalAlignment="Top" />

        <TextBlock HorizontalAlignment="Left" Margin="0,60,0,0" FontSize="24" Name="textBlockVersion"
                   Text="Version 13.0.1" VerticalAlignment="Top" />

        <TextBlock HorizontalAlignment="Left" Margin="0,100,0,0" FontSize="24" Name="textBlockLicense1"
                   Text="" VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left" Margin="0,130,0,0" FontSize="20" Name="textBlockLicense2"
                   Text="" VerticalAlignment="Top" />

        <Button Content="OK" Height="23" HorizontalAlignment="Right" Margin="0,0,0,0" Name="buttonClose" VerticalAlignment="Bottom" Width="75" Click="buttonClose_Click" IsDefault="True" IsCancel="True" />
