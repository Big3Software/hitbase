<Popup xmlns:my="clr-namespace:Big3.Hitbase.Controls"  x:Class="Big3.Hitbase.Controls.PictureSearchPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" AllowsTransparency="True">
    <my:PictureSearchUserControl x:Name="PictureSearchUserControl" CloseClicked="PictureSearchUserControl_CloseClicked" PictureSelected="PictureSearchUserControl_PictureSelected" Margin="0,0,20,20">
        <my:PictureSearchUserControl.Effect>
            <DropShadowEffect Opacity="0.5" ></DropShadowEffect>
        </my:PictureSearchUserControl.Effect>
    </my:PictureSearchUserControl>
</Popup>
