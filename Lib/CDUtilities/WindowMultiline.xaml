<Window x:Class="Big3.Hitbase.CDUtilities.WindowMultiline"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="WindowMultiline" Height="500" Width="500" MinHeight="300" MinWidth="300" Style="{DynamicResource MyWindowStyle}" ShowInTaskbar="False" WindowStartupLocation="CenterOwner"
        TextOptions.TextFormattingMode="Display">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Padding="20,2,20,2" Margin="0,10,10,0" Content="OK" Name="buttonOK" IsDefault="True" Click="buttonOK_Click"></Button>
            <Button Padding="20,2,20,2" Margin="0,10,0,0" Content="Abbrechen" Name="buttonCancel" IsCancel="True" Click="buttonCancel_Click"></Button>
        </StackPanel>
        <TextBox Name="textBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"/>
    </DockPanel>
</Window>
